{
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "deno.unstable"]
  },
  "imports": {
    "@penpot/api-client": "jsr:@penpot/api-client@^0.1.0",
    "jsr:@std/path": "jsr:@std/path@^0.224.0",
    "jsr:@std/fs": "jsr:@std/fs@^0.224.0",
    "jsr:@std/flags": "jsr:@std/flags@^0.224.0",
    "jsr:@std/assert": "jsr:@std/assert@^0.224.0"
  },
  "tasks": {
    "gen": "deno run --allow-read=./openapi.json --allow-write=src/client/generated/ src/scripts/generate_client.ts",
    "test": "deno test src/tests/",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "fmt": {
    "include": ["src/", "examples/", "."],
    "exclude": ["src/client/generated/"]
  },
  "lint": {
    "include": ["src/", "examples/", "."]
  }
}
